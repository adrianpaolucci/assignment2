{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Forestation [% of land] by Country",
  "width": 720,
  "height": 400,
   "config": {
    "background": "#e6f9ff",
    "axis": {
      "gridColor": "skyblue"
    }
  },


  "data": {
    "url": "https://adrianpaolucci.github.io/assignment2/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://adrianpaolucci.github.io/assignment2/data/forestation.csv"
        },
        "key": "Country",
        "fields": ["Forestation"]
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
   "config": {
    "background": "#e6f9ff",
    "axis": {
      "gridColor": "skyblue"
    }
  },
  "encoding": {
    "color": {
      "field": "Forestation",
      "title": "% Forestation",
      "type": "quantitative",
      "scale": {"type": "linear", "range": ["#e6ffe6", "green"]}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Forestation","title": "Forestation [%]", "type": "quantitative", "format": ".2f"}
    ]
  }
    
    
  }
