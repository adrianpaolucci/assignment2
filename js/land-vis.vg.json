{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing body mass and flipper lengths of penguins.",
  "data": {
    "url": "https://raw.githubusercontent.com/adrianpaolucci/assignment2/main/data/forestation.csv"
  },
  "width": 600,
  "height": 450,
  "params": [{
    "name": "grid",
    "select": "interval",
    "bind": "scales"
  },
  {"name": "co2_min",
 "value": 0,
 "bind": {
 "input": "range",
 "min": 0,
 "max": 50,
 "step": 2,
 "name": "Minimum CO2 Emissions: "
 }
 }],
  "padding": {
      "left": 50,
      "right": 50,
      "bottom": 50 
  }, 
  
  "title": ["Agricultural vs Urban Land Use","---------------------------------------------","Zoom and pan to investigate data density"],
  "config": {
    "background": "#e6f9ff",
    "axis": {
      "gridColor": "skyblue"
    }
  },

  "layer": [
      {
"transform": [
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/adrianpaolucci/assignment2/main/data/co2gdpdata.csv"
        },
        "key": "Entity",
        "fields": ["co2"]
      }
    },
    {
        "filter": "datum.co2 > co2_min"
    }
  ],
  "mark": "circle",
  "view": {
      "strokeWidth": 0
  },

  "encoding": {
    "x": {
      "field": "Agriculture",
      "title": "Agricultural Land [% of Total Land]",
      "type": "quantitative",
      "scale": {
        "domain": [0,90]
      },
      "axis": {
        "tickCount": 5
      }
      },
    "y": {
      "field": "Urban Land",
      "title": "Urban Land [% of Total Land]",
      "type": "quantitative",
      "scale": {
        "domain": [-0,25],
        "type": "symlog"
      },
      "axis": {
        "tickCount": 5
      }
    },
    "color": {
     "scale": {"type": "linear", "range": ["#ffeee6", "#e64d00"]},
     "legend": null,
 "field": "co2",
 "type": "quantitative"},

    "tooltip": [
      {"field": "Country", "title": "Country"},
      {"field": "co2", "title": "CO2 Emissions in kTonnes", "format": ".2f"}
    ],
    "opacity": {"value": 0.5},
    "size": {"field": "co2", "title": "CO2 Emissions in kTonnes","type": "quantitative",
    "legend": {"orient": "bottom"},
    "scale": {
      "rangeMin": 0,
      "rangeMax": 55000,
      "type": "threshold",
      "domain": [5, 10, 20, 50],
      "range": [125, 250, 500, 1000]
 }}
}}
 
  
  ]
  }
