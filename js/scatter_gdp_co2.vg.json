{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing body mass and flipper lengths of penguins.",
  "data": {
    "url": "https://raw.githubusercontent.com/adrianpaolucci/assignment2/main/data/co2gdpdata.csv"
  },
  "width": 680,
  "height": 450,
  "padding": {
      "bottom": 50 
  }, 
  "title": "COâ‚‚ Emissions vs GDP for Select Countries",
  "config": {
    "background": "#e6f9ff",
    "axis": {
      "gridColor": "skyblue"
    }
  },
    "transform": [
      {"filter": "datum.population > 20000000"},
      {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},
      {"filter": "datum.population > Population_min"}
  ],
  "encoding": {
    "x": {
      "field": "co2",
      "title": "CO2 Emissions",
      "type": "quantitative",
      "scale": {
        "domain": [0,21]
      },
      "axis": {
        "tickCount": 5
      }
      },
    "y": {
      "field": "GDP per capita",
      "type": "quantitative",
      "scale": {
        "domain": [0,60000]
      },
      "axis": {
        "tickCount": 5
      }
    }},
  "params": [
 {
 "name": "Continent_selection",
 "bind": {
 "input": "select",
 "options": [
 null,
 "North America",
 "South America",
 "Europe",
 "Africa",
 "Asia",
 "Oceania"
 ],
 "labels":[
 "Show All",
 "North America",
 "South America",
 "Europe",
 "Africa",
 "Asia",
 "Oceania"
 ],
 "name": "Continent Selection: "
 }
 },
 {"name": "Population_min",
 "value": 0,
 "bind": {
 "input": "range",
 "min": 0,
 "max": 250000000,
 "step": 1000000,
 "name": "Minimum Population: "
 }
 }
 ],
  "layer": [
      {
  "mark": "circle",
  "view": {
      "strokeWidth": 0
  },
  

  "transform": [
      {"filter": "datum.population > 20000000"},
      {"filter": "Continent_selection == null || datum.Continent == Continent_selection"},
      {"filter": "datum.population > Population_min"}
  ],
  "encoding": {
    "x": {
      "field": "co2",
      "title": "CO2 Emissions",
      "type": "quantitative",
      "scale": {
        "domain": [0,21]
      },
      "axis": {
        "tickCount": 5
      }
      },
    "y": {
      "field": "GDP per capita",
      "type": "quantitative",
      "scale": {
        "domain": [0,60000]
      },
      "axis": {
        "tickCount": 5
      }
    },
    "color": {
 "field": "Continent",
 "type": "nominal",
   "legend": {"orient": "right"},

 "scale": {
 "domain": [
 "North America",
 "South America",
 "Europe",
 "Africa",
 "Asia",
 "Oceania"
 ],
 "range": [
 "#e41a1c",
 "#984ea3",
 "#ff7f00",
 "#a6cee3",
 "#377eb8",
 "#a65628"
 ]
 }
 },
    "tooltip": [
        {"field": "Entity", "title": "Country"},
        {"field": "co2", "title": "CO2 Emissions [kTonnes]"},
        {"field": "GDP per capita", "title": "GDP [US$]"}
    ],
    "opacity": {"value": 0.5},
    "size": {"field": "population", "title": "Population","type": "quantitative",
    "legend": {"orient": "bottom", "columns": 2},
    "scale": {
      "rangeMin": 0,
      "rangeMax": 55000,
      "type": "threshold",
      "domain": [10000000, 50000000, 100000000, 500000000],
      "range": [125, 250, 500, 1000, 2000]
 }
}
  }
      },
      {"mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dy": 25,
                "dx": -10
            },
            "transform": [
                {"filter": "datum.Entity == 'China'|| datum.Entity == 'United States'||datum.Entity == 'India'||datum.Entity == 'France'||datum.Entity == 'Indonesia'||datum.Entity == 'Russia'"}
            ],
            "encoding": {
                "text": {"field": "Entity", "type": "nominal", "title": "Country"},
                "color": {"value": "black"}
            }
        }

      ]
}
