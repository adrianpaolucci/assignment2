{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/adrianpaolucci/assignment2/main/data/linedata.csv"},
    "title": "CO2 emissions over time by Continents",
  "width": 800,
  "height": 500,
  "explain": "hello this is a test",
  "params": [
 {
 "name": "Continent_selection",
 "bind": {
 "input": "select",
 "options": [
 null,
 "North America",
 "South America",
 "Europe",
 "Africa",
 "Asia",
 "Oceania"
 ],
 "labels":[
 "Show All",
 "North America",
 "South America",
 "Europe",
 "Africa",
 "Asia",
 "Oceania"
 ],
 "name": "Continent Selection: "
 }
 }
 ],
 "transform": [{"filter": "Continent_selection == null || datum.Entity == Continent_selection"}],
  "encoding": {
    "x": {
      "field": "Year", 
      "type": "quantitative",
    "scale":{
      "domain" : [1900,2018]
        }
      }
    },
  "layer": [
    {
      "encoding": {
       
        "color": {"field": "Entity", "type": "nominal"},
        "y": {"field": "Annual CO2 emissions", "type": "quantitative"}
      },
      "layer": [
        {    "mark": {
    "type": "line",
    "clip": true
        }
      },
     

        {"transform": [{"filter": {"selection": "hover"}}], "mark": "point"}
      ]
    },
    {
      "transform": [{"pivot": "Entity", "value": "Annual CO2 emissions", "groupby": ["Year"]}],
      "mark": {"type":"rule","clip":true},
      "encoding": {
       
        "opacity": {
          "condition": {"selection": "hover", "value": 0.1},
          "value": 0
        },
      
        "size": {"legend": {"format": ".1s"}},
        
        "tooltip": [
          {"field": "Year", "type": "quantitative"},
          {"field": "Asia", "type": "quantitative"},
          {"field": "Africa", "type": "quantitative"},
          {"field": "Europe", "type": "quantitative"},
          {"field": "North America", "type": "quantitative"},
          {"field": "South America", "type": "quantitative"},
          {"field": "Oceania", "type": "quantitative"}
        ]},
        "mark": {
 "type": "text",
 "align": "right",
 "baseline": "middle",
 "dx": -12,
 "fontSize": 11.5,
 "fontStyle": "italic"
 },
    "encoding": {
 "text": {"field": "Year", "type": "nominal"},
 "color": {"value": "black"},
 "opacity": {
 "condition": {
 "test": "datum['Year'] == '1992'",
 "value": 1
 },
 "value": 0
 }

      },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["Year"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }

      }
      }
  ]
}
