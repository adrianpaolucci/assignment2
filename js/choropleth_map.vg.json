{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Forestation [% of land] by Country",
  "width": 700,
  "height": 500,
  "data": {
    "url": "https://adrianpaolucci.github.io/assignment2/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://adrianpaolucci.github.io/assignment2/data/forestation.csv"
        },
        "key": "Country",
        "fields": ["Emissions"]
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Emissions",
      "title": "% Forestation",
      "type": "quantitative",
      "scale": {"type": "linear", "range": ["#0000", "green"]}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Emissions", "type": "quantitative"}
    ]
  }
}
